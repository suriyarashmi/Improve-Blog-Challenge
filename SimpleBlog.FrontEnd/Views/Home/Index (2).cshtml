@model SimpleBlog.FrontEnd.ViewModels.PostsViewModel
@{
    ViewData["Title"] = "Our Simple Blog Posts";
   // var bgRand = new Random(0);
 var bgRand = {Model.Post.ColorGroup};
}

<h1>Our Posts</h1>
<h5><a href="Index.chtml">Home</a> > <a href="/Post/Index.chtml">Posts</a> </h5>
@if(Model.Posts != null && Model.Posts.Count() > 0)
{
    foreach(var post in Model.Posts)
    {
<div class="row m1emb">
    <a href="@Url.Action("Details", "Posts", new { id = post.Id })">
        <div class="col-md-4">
            <img src="@post.Image" alt="@post.Title" class="img-responsive" />
        </div>
        <div class="col-md-8">
            <h3>@post.Title</h3>
        </div>
    </a>
</div>
    }
} else {
<div class="row">
    <div class="col-md-12">
        <p>There's nothing to see here.. :|</p>
    </div>
</div>
}